
@{
    ViewBag.Title = "Spells";
}

<h2 style="color:white">Spells Search Engine</h2>

<body style="background-image: url(https://storage.needpix.com/rsynced_images/wood-1700562_1280.jpg);
        background-repeat: no-repeat;
        background-size: cover;
    ">
</body>




@using (Html.BeginForm("Spells", "Creatures", FormMethod.Post))
{

<div class="row">
    <h1 style="text-align:center; color:white">Welcome to the spell page!</h1>
    <div class="col-lg-4">

    </div>
    <div class="col-lg-4">

        <div class="form-group">
            <div class="search">
                @Html.TextBox("SpellName", null, new { @class = "form-control", type = "text", placeholder = "search for a spell name" })
                <button class="btn btn-primary" style="text-align:center" type="submit">Search</button>
            </div>
        </div>

    </div>
    <div class="col-lg-4">

    </div>

</div>
    


}
<div class="container">
    @if (ViewBag.Success == true)
    {
        foreach (var item in ViewBag.SpellsList)
        {
            string spell = item.ToString();
            <h4 style="color:white">@spell</h4>
        }

    }
</div>



@using CaptchaMvc.HtmlHelpers;
@model DDToolKit.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}


<style>
    h2 {
        color: #ffffff;
    }

    h4 {
        color: #ffffff;
    }

    div.form-group {
        color: #ffffff;
    }

    div.form-groups {
        color: red;
    }
</style>

<body style="background-image:url('/Content/image/loginBackground.jpg');
    background-repeat: no-repeat;
    background-size: cover;
    ">
</body>


<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    <div class="form-group" style="color :aliceblue;font-size:16px">
        @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10" style="color :aliceblue;font-size:16px">
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
        </div>
    </div>


    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-groups">
        <div class="col-md-10">
            &nbsp;
            @Html.Captcha(5)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
            <br />
            @ViewBag.error
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
